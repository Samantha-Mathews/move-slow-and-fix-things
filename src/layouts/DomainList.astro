---
import Base from './Base.astro';

interface Props {
  title: string;
  description: string;
  domain: string;
  icon: string;
  posts: any[];
}

const { title, description, domain, icon, posts } = Astro.props;

// Sort posts by date, most recent first
const sortedPosts = posts.sort((a, b) => {
  const dateA = a.data.date?.getTime() || 0;
  const dateB = b.data.date?.getTime() || 0;
  return dateB - dateA;
});
---

<Base title={title} description={description} domain={domain}>
  <div class="domain-page">
    <header class="domain-header">
      <div class="domain-icon">{icon}</div>
      <h1>{title}</h1>
      <p class="domain-description">{description}</p>
    </header>
    
    <div class="posts-grid">
      {sortedPosts.map((post) => {
        const formattedDate = post.data.date ? new Intl.DateTimeFormat('en-US', {
          year: 'numeric',
          month: 'short'
        }).format(post.data.date) : null;
        
        return (
          <a href={`/${domain}/${post.slug}`} class="post-card">
            {post.data.cover && (
              <div class="post-card-cover">
                <img src={post.data.cover} alt={post.data.title} />
              </div>
            )}
            <div class="post-card-content">
              <h3>{post.data.title}</h3>
              {post.data.description && <p>{post.data.description}</p>}
              <div class="post-card-meta">
                {formattedDate && <time>{formattedDate}</time>}
                {post.data.tags && post.data.tags.slice(0, 3).map((tag: string) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </a>
        );
      })}
    </div>
    
    {sortedPosts.length === 0 && (
      <div class="empty-state">
        <p>Nothing here yet. Check back soon!</p>
      </div>
    )}
  </div>
</Base>

<style>
  .domain-page {
    max-width: 1000px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }
  
  .domain-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .domain-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--domain-color, var(--ember)) 0%, var(--domain-light, var(--ember-glow)) 100%);
    font-size: 1.5rem;
  }
  
  .domain-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .domain-description {
    color: var(--sand);
    font-size: 1.1rem;
    max-width: 500px;
    margin: 0 auto;
  }
  
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
  
  .post-card {
    background: var(--night);
    border: 1px solid var(--wood);
    border-radius: 6px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
  }
  
  .post-card:hover {
    transform: translateY(-4px);
    border-color: var(--bark);
    box-shadow: 0 12px 40px rgba(0,0,0,0.3);
  }
  
  .post-card-cover {
    aspect-ratio: 16/9;
    overflow: hidden;
  }
  
  .post-card-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .post-card:hover .post-card-cover img {
    transform: scale(1.05);
  }
  
  .post-card-content {
    padding: 1.5rem;
  }
  
  .post-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }
  
  .post-card p {
    color: var(--sand);
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 1rem;
  }
  
  .post-card-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
    font-size: 0.75rem;
    color: var(--stone);
  }
  
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--stone);
  }
  
  @media (max-width: 768px) {
    .domain-page {
      padding: 2rem 1.5rem;
    }
    
    .posts-grid {
      grid-template-columns: 1fr;
    }
    
    .domain-header h1 {
      font-size: 2rem;
    }
  }
</style>
