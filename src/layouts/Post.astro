---
import Base from './Base.astro';

interface Props {
  title: string;
  description?: string;
  date?: Date;
  cover?: string;
  tags?: string[];
  domain: string;
  domainLabel: string;
  domainIcon: string;
}

const { title, description, date, cover, tags, domain, domainLabel, domainIcon } = Astro.props;

const formattedDate = date ? new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(date) : null;
---

<Base title={title} description={description} domain={domain}>
  <article class="post">
    <header class="post-header">
      <a href={`/${domain}`} class="post-domain">
        <span class="domain-icon">{domainIcon}</span>
        <span>{domainLabel}</span>
      </a>
      <h1>{title}</h1>
      {description && <p class="post-description">{description}</p>}
      <div class="post-meta">
        {formattedDate && <time datetime={date?.toISOString()}>{formattedDate}</time>}
        {tags && tags.length > 0 && (
          <div class="post-tags">
            {tags.map(tag => <span class="tag">{tag}</span>)}
          </div>
        )}
      </div>
    </header>
    
    {cover && (
      <div class="post-cover">
        <img src={cover} alt={title} />
      </div>
    )}
    
    <div class="post-content prose">
      <slot />
    </div>
    
    <footer class="post-footer">
      <a href={`/${domain}`} class="btn btn-secondary">‚Üê Back to {domainLabel}</a>
    </footer>
  </article>
</Base>

<style>
  .post {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }
  
  .post-header {
    margin-bottom: 3rem;
  }
  
  .post-domain {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--domain-color, var(--ember));
    text-decoration: none;
    margin-bottom: 1rem;
  }
  
  .post-domain:hover {
    color: var(--domain-light, var(--ember-glow));
  }
  
  .domain-icon {
    font-size: 1rem;
  }
  
  .post-header h1 {
    font-size: 2.8rem;
    margin-bottom: 1rem;
    line-height: 1.15;
  }
  
  .post-description {
    font-size: 1.2rem;
    color: var(--sand);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  .post-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
    color: var(--stone);
    font-size: 0.85rem;
  }
  
  .post-tags {
    display: flex;
    gap: 0.5rem;
  }
  
  .post-cover {
    margin-bottom: 3rem;
  }
  
  .post-cover img {
    width: 100%;
    border-radius: 6px;
  }
  
  .post-content {
    margin-bottom: 4rem;
  }
  
  .post-footer {
    padding-top: 2rem;
    border-top: 1px solid var(--wood);
  }
  
  @media (max-width: 768px) {
    .post {
      padding: 2rem 1.5rem;
    }
    
    .post-header h1 {
      font-size: 2rem;
    }
  }
</style>
